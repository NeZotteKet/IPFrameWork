  /* Macro intestellingen */
  
  body {
      background-color: white;
      color: white;
  }
  
  #wrapper {
      /* #2E2E2E */
      background-color: white;
      overflow: hidden;
      padding: 0 2%;
      /*margin-left: 5%;
      margin-right: 5%;*/
  }
  /* Navigatie */
  
  nav {
      padding-top: 70px;
      display: block;
      width: 80%;
      margin-bottom: 2%;
      float: right;
      border-bottom: 2px solid rgb(142, 201, 61);
  }
  
  nav ul {
      padding-left: 25%;
      display: flex;
      justify-content: center;
      align-items: center;
  }
  
  nav ul li {
      font-size: 1.1em;
      width: 20%;
      height: inherit;
      float: left;
      text-align: center;
      border-radius: 2px;
  }
  
  nav ul li a {
      display: block;
      color: black;
      padding: 5% 0;
  }
  
  nav ul li:hover {
      background: rgb(142, 201, 61);
  }
  
  nav ul li a:link,
  nav ul li a:visited {
      color: black;
      text-decoration: none;
      cursor: auto;
  }
  
  @media only screen and (max-width: 650px) {
      nav {
          height: auto;
          width: 100%;
      }
      nav ul {
          padding-left: 0;
          float: none;
          display: block;
      }
      nav ul li {
          width: 97.6%;
          float: none;
          clear: both;
      }
      nav a {
          height: 50px;
          text-align: center;
      }
  }
  /* Header */
  
  header {
      width: 100%;
  }
  
  #logo h1 {
      height: 180px;
      background-image: url(images/Logo-Klein-Wit-bspline.jpg);
      background-repeat: no-repeat;
      background-position: center;
      text-indent: -9999px;
  }
  
  @media only screen and (max-width: 650px) {
      #logo h1 {
          width: 100%;
          margin-bottom: 5%;
          background-image: url(images/Logo-Klein-Wit.jpg);
          float: none;
          clear: both;
          display: block;
      }
  }
  
  #logo {
      width: 20%;
  }
  /* Main */
  
  main {
      clear: both;
      height: 100%;
  }
  
  main section h2 {
      font-size: 3em;
      color: rgb(142, 201, 61);
      font-family: Impact, Charcoal, sans-serif;
  }
  
  main section h3 {}
  
  main section {
      margin-left: 20%;
      width: 40%;
      color: black;
      float: left;
  }
  /* Footer */
  
  footer {
      margin-top: 5%;
      padding-top: 30px;
      clear: both;
      background-color: rgb(142, 201, 61);
      height: 90px;
  }
  
  footer p {
      text-align: center;
      color: black;
  }